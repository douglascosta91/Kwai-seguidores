<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Painel de Seguidores</title>
<style>
body {
    font-family: Arial;
    background: #111;
    color: white;
    text-align: center;
    padding: 20px;
}
.container {
    background: #1e1e1e;
    padding: 20px;
    border-radius: 15px;
    max-width: 400px;
    margin: auto;
}
input {
    width: 90%;
    padding: 10px;
    margin: 10px;
    border-radius: 10px;
    border: none;
}
button {
    padding: 12px;
    width: 95%;
    border: none;
    border-radius: 10px;
    background: #00ff88;
    font-size: 16px;
    font-weight: bold;
}
.lista {
    margin-top: 20px;
    text-align: left;
}
.item {
    background: #2b2b2b;
    padding: 10px;
    margin: 5px 0;
    border-radius: 8px;
}
</style>
</head>
<body>

<div class="container">
    <h2>Painel de Seguidores</h2>
    
    <input type="text" id="usuario" placeholder="@usuario">
    <input type="number" id="seguidores" placeholder="Quantidade de seguidores">
    
    <button onclick="adicionar()">Adicionar</button>

    <div class="lista" id="lista"></div>
</div>

<script>
let dados = [];

function adicionar() {
    let usuario = document.getElementById("usuario").value;
    let seguidores = document.getElementById("seguidores").value;

    if (usuario === "" || seguidores === "") {
        alert("Preencha todos os campos!");
        return;
    }

    dados.push({ usuario, seguidores });
    atualizarLista();

    document.getElementById("usuario").value = "";
    document.getElementById("seguidores").value = "";
}

function atualizarLista() {
    let lista = document.getElementById("lista");
    lista.innerHTML = "";

    dados.forEach((item, index) => {
        lista.innerHTML += `
            <div class="item">
                <strong>${item.usuario}</strong><br>
                Seguidores: ${item.seguidores}
            </div>
        `;
    });
}
</script>

</body>
</html>
