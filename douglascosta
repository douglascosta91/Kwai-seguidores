<body>

<div class="card">
    <h1>Painel de Seguidores</h1>
    <h2>Kwai</h2>

    <img src="https://via.placeholder.com/150" alt="Foto Perfil">

    <h2>@mineirinhodebh91</h2>

    <h1><span id="seguidores">10000</span> Seguidores</h1>

    <button class="add" onclick="adicionar()">+ Adicionar Seguidor</button>
    <button class="reset" onclick="resetar()">Resetar Contador</button>
</div>

<script>
let seguidores = localStorage.getItem("kwaiSeguidores");

if(seguidores === null){
    seguidores = 10000;
    localStorage.setItem("kwaiSeguidores", seguidores);
} else {
    seguidores = parseInt(seguidores);
}

document.getElementById("seguidores").innerText = seguidores;

function adicionar() {
    let senha = prompt("Digite a senha admin:");
    if (senha === "1234") {
        seguidores++;
        atualizar();
    } else {
        alert("Senha incorreta!");
    }
}

function resetar(){
    let senha = prompt("Digite a senha admin:");
    if (senha === "1234") {
        seguidores = 10000;
        atualizar();
    } else {
        alert("Senha incorreta!");
    }
}

function atualizar(){
    document.getElementById("seguidores").innerText = seguidores;
    localStorage.setItem("kwaiSeguidores", seguidores);
}
</script>

